<%if user_signed_in? %>
  <%= form_with url: calendars_path do |f| %>
    <%= f.hidden_field  :date, value: date %>
    <%= f.hidden_field  :day, value: day %>
    <%= f.hidden_field  :start_time, value: start_time%>
    <%= f.hidden_field  :end_time, value: end_time%>
    <% if can_reserve?(start_time, date) %>
      <%= f.submit "Reserve" %>
    <% end %>
  <% end %>
<% end %>